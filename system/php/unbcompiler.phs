<?php
require_once("Decompiler.class.php");

if (!isset($argv)) {
	$argv = $_SERVER['argv'];
	$argc = $_SERVER['argc'];
}

$dc = new Decompiler();
if (isset($argv[2])) {
	eval('$dc->dc = ' . file_get_contents($argv[2]) . ';');
}
else if (isset($argv[1])) {
	$dc->decompileFile($argv[1]);
}
else {
	$phpcode = '';
	if (!defined('stdin')) {
		define('stdin', fopen('php://stdin', 'rb'));
	}
	while (!feof(stdin)) {
		$phpcode .= fgets(stdin);
	}
	$dc->decompileString($phpcode);
}
$dc->output();

